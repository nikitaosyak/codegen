public struct RestrictionSolver {
    
    List<IRestriction> restrictions;
    
    public RestrictionSolver(List<IRestriction> restrictions) {
        this.restrictions = restrictions;
    }

    public bool solve(IHero hero) {
        for (int i = 0; i < restrictions.length; i++) {
            if (!restrictions[i].solve(hero)) return false;
        }
        return true
    }
}
